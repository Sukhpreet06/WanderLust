<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input 
                   type="text" 
                   name="username"
                   id="username" 
                   placeholder="Add Your's Name " 
                   class="form-control"
                   required
                />
                <div class="valid-feedback"> looks Good!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Passsword</label>
                <input 
                   type="password" 
                   name="password"
                   id="password" 
                   placeholder="Enter your Password " 
                   class="form-control"
                   required
                />
                <div class="valid-feedback"> looks Good!</div>
            </div>
            <button class="btn btn-success">LogIn</button>
        </form>

     </div>
</div>
<script>
    function clearLocalStorage() {
        localStorage.removeItem('userToken'); // Replace 'userToken' with the actual key if needed
        localStorage.removeItem('userId'); // Replace with your actual key if applicable
    }

    // Ensure this runs when the page loads
    window.addEventListener('load', clearLocalStorage);
</script>
