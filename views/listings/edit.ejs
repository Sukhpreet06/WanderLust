<%= layout("/layouts/boilerplate")%>
   <div class="row mt-3">
    <div class="col-8 offset-2">

    <h1>Edit Your  Listing :</h1> 
    <form method="POST" action="/listings/<%= nlisting._id %>?_method=PUT" novalidate class="needs-validation"
        enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="nlisting[title]" value="<%= nlisting.title %>" class="form-control"
            required/>
            <div class="invalid-feedback">Location should be valid</div>
            <div class="valid-feedback"> looks Good!</div>
            
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="nlisting[description]" class="form-control"
            required
            ><%= nlisting.description %></textarea>
            <div class="inavlid-feedback"> Description should be valid</div>
            <div class="valid-feedback">looks Good</div>
            
        </div>
        <div class="mb-3">
            Original Listing  Image <br>
            <img src="<%= originalImageUrl %>"/>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image </label>
            <input 
            type="file" 
            name="nlisting[image]" 
            class="form-control"/>
            
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number"  name="nlisting[price]" value="<%= nlisting.price %>" class="form-control" required/>
                <div class="invalid-feedback">Price should be valid</div>
                <div class="valid-feedback">looks Good!</div>
                
            </div>
            <div class="mb-3 class col-md-8">
                <label for="country" class="form-label">country</label>
                <input type="text" name="nlisting[country]" value="<%= nlisting.country %>" class="form-control " required/>
                <div class="invalid-feedback">Country should be valid</div>
                <div class="valid-feedback">looks Good!</div>
                
            </div>

        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input type="text" name="nlisting[location]" value="<%= nlisting.location %>" class="form-control"  required/>
            <div class="invalid-feedback">Location should be valid</div>
            <div class="valid-feedback"> looks Good!</div>
            
        </div>
        <button class="btn btn-dark edit-btn mt-3">EDIT</button>
        
    </form>
</div>
</div>
    