<%= layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br/><br/>
    <h1>Create A New Listing :</h1>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input 
            type="text" 
            name="nlisting[title]" 
            placeholder="Add A Catchy Title" 
            class="form-control"
            required
            />
            <div class="invalid-feedback">Please Enter a valid Title</div>
            <div class="valid-feedback">Title looks Good!</div>
        </div>
        

        <div class="mb-3"> 
            <label for="description" class="form-label">Description</label>
            <textarea type="text" 
            name="nlisting[description]" 
            class="form-control"
            required
            >
           
            </textarea>
            <div class="invalid-feedback">Please Enter a Description (15 words )</div>
            <div class="valid-feedback">Description looks Good!</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label"> Upload Image</label>
            <input type="file" 
            name="nlisting[image]" 
            class="form-control"
            required
            />
            
        </div>
         
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input   
                name="nlisting[price]" 
                placeholder="1200"
                class="form-control"
                required
                />
                <div class="invalid-feedback">Price should be valid</div>
                <div class="valid-feedback">looks Good!</div>
            </div>
            <br/><br/>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">country</label>
                <input type="text" 
                name="nlisting[country]" 
                placeholder="India"
                class="form-control"
                required
                />
                <div class="invalid-feedback">Country should be valid</div>
                <div class="valid-feedback">looks Good!</div>
            </div>

        </div>
        

        <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input type="text" 
            name="nlisting[location]" 
            placeholder="Jalandhar"
            class="form-control"
            required/>
            <div class="invalid-feedback">Location should be valid</div>
            <div class="valid-feedback"> looks Good!</div>
        </div>
        <button class="btn btn-dark addd-btn mt-3">Add</button>
        
        
    </form>
</div>
</div>
